@model Nhom05_QuanLyShopQuanAo.Models.NhanVien
@{
    ViewBag.Title = "Thông Tin Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="container" style="padding-top:50px">
        <div class="row">
            <div class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item active"><a href="~/ThongTin/ThongTinAdmin" style="color:white;text-decoration:none">Thông tin tài khoản</a></li>
                    <li class="list-group-item"><a href="~/DangNhapAdmin/Logout" style="color:black;text-decoration:none">Đăng xuất</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                <h3>THÔNG TIN TÀI KHOẢN</h3>
                <form method="post" action="@Url.Action("CapNhatThongTin", "ThongTin", new { area = "Admin" })">
                    <div class="form-group">
                        <label>Họ</label>
                        @Html.TextBoxFor(model => model.Ho, new { @class = "form-control" })
                        <label>Tên</label>
                        @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Giới tính</label>
                        <div style="padding-top:5px;padding-bottom:5px">
                            @Html.RadioButtonFor(model => model.GioiTinh, "Nam") Nam
                            @Html.RadioButtonFor(model => model.GioiTinh, "Nữ") Nữ
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-top:20px;margin-bottom:20px">LƯU THAY ĐỔI</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
<div class="alert alert-success">
    @ViewBag.Message
</div>}


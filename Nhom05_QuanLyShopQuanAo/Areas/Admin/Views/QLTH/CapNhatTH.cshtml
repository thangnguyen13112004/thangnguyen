@model Nhom05_QuanLyShopQuanAo.Models.ThuongHieu

@{
    ViewBag.Title = "CapNhatTH";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh sửa thương hiệu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container d-flex justify-content-center">
        @using (Html.BeginForm("CapNhatTH", "QLTH", FormMethod.Post, new { @class = "form mw-50" }))
        {
            <h3>Chỉnh sửa thương hiệu</h3>
            <div class="form-group">
                @Html.LabelFor(x => x.MaThuongHieu, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.MaThuongHieu, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(x => x.MaThuongHieu, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.TenThuongHieu, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.TenThuongHieu, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(x => x.TenThuongHieu, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-center m-3">
                @Html.ActionLink("Cancel", "HienThiThuongHieu", "QLTH", new { @class = "btn btn-secondary" })
                <button type="submit" class="btn btn-success">Chỉnh sửa</button>
            </div>
        }
    </div>
</body>
</html>




@model Nhom05_QuanLyShopQuanAo.Models.SanPham

@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center">
    @using (Html.BeginForm("CapNhatSP", "QLSP", FormMethod.Post, new { @class = "form mw-50" }))
    {
        <h3>Chỉnh sửa sản phẩm</h3>
        <div class="form-group">
            @Html.LabelFor(x => x.MaSanPham, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.MaSanPham, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.TenSanPham, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.TenSanPham, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.TenSanPham, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.GioiTinh, new { @class = "form-label" })
            @Html.DropDownListFor(x => x.GioiTinh, (IEnumerable<SelectListItem>)ViewBag.Genders, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GioiTinh, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.MaDanhMuc, new { @class = "form-label" })
            @Html.DropDownListFor(x => x.MaDanhMuc, (IEnumerable<SelectListItem>)ViewBag.Danhmuc, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MaDanhMuc, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.MaThuongHieu, new { @class = "form-label" })
            @Html.DropDownListFor(x => x.MaThuongHieu, (IEnumerable<SelectListItem>)ViewBag.Thuonghieu, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MaThuongHieu, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Gia, new { @class = "form-label" })
            @Html.TextBoxFor(x => x.Gia, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(x => x.Gia, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.MoTa, new { @class = "form-label" })
            @Html.TextAreaFor(x => x.MoTa, new { @class = "form-control", rows = 4 })
            @Html.ValidationMessageFor(x => x.MoTa, "", new { @class = "text-danger" })
        </div>
        <div class="d-flex justify-content-center m-3">
            @Html.ActionLink("Cancel", "HienThiSanPham", "QLSP", new { @class = "btn btn-secondary" })
            <button type="submit" class="btn btn-success" style="margin-left:10px">Chỉnh sửa</button>
        </div>
    }
</div>




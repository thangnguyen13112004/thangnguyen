
@{
    Layout = null;
    ViewBag.Title = "Login_NguoiDung";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="icon" href="~/imgs/LOGO-removebg-preview.png" type="images/x-icon">
    <link href="~/Content/TranKhangDI_css/LoginNguoiDung_css/LoginNguoiDung.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>

<body>
    
    <div class="hero">
        <div style="padding-left:685px;padding-right:700px;padding-top:20px;font-size:20px;font-weight:600">
            @if (TempData["LoginRequired"] != null)
            {
                <div style="color:red">   
                    @TempData["LoginRequired"]
                </div>
            }
        </div>

        <div class="form-box">
            
            <div style="padding-top:20px;text-align:center">
                <p style="font-size:35px;font-weight:600">ĐĂNG NHẬP</p>
            </div>

            <div class="social-icon">
                <i class="fa-brands fa-google fa-xl" style="cursor: pointer;"></i>
                <i class="fa-brands fa-facebook fa-xl" style="cursor: pointer;"></i>
                <i class="fa-brands fa-github fa-xl" style="cursor: pointer;"></i>
            </div>

            <form id="login" action="@Url.Action("Login_NguoiDung", "DangNhap")" class="input-group" method="post">
                <input type="text" name="username" class="input-field" placeholder="User id" required />
                <input type="password" id="login-password" name="password" class="input-field" placeholder="Nhập mật khẩu" required />



                <div>
                    <input type="checkbox" class="check-box">Remember Password
                </div>


                <button type="submit" class="submit-btn">Đăng nhập</button>



                @if (ViewBag.ErrorMessage != null)
                {
                    <p style="color:red">@ViewBag.ErrorMessage</p>
                }

                <div style="padding-top:30px">
                    <p>Bạn chưa có tài khoản? <a href="~/DangNhap/DangKy_NguoiDung" style="text-decoration:none;color:blue">Đăng ký</a></p>
                </div>
            </form>


        </div>
    </div>

</body>

</html>


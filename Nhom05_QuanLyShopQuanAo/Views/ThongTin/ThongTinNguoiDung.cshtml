@model Nhom05_QuanLyShopQuanAo.Models.KhachHang
@using Nhom05_QuanLyShopQuanAo.Models
@{
    ViewBag.Title = "ThongTinNguoiDung";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Colo Shop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/styles/bootstrap4/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet" />
    <link href="~/styles/main_styles.css" rel="stylesheet" />
    <link href="~/styles/responsive.css" rel="stylesheet" />

</head>

<body>

    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">free shipping on all u.s orders over $50</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    <!-- Currency / Language / My Account -->

                                    <li class="currency">
                                        <a href="#">
                                            usd
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="currency_selection">
                                            <li><a href="#">cad</a></li>
                                            <li><a href="#">aud</a></li>
                                            <li><a href="#">eur</a></li>
                                            <li><a href="#">gbp</a></li>
                                        </ul>
                                    </li>
                                    <li class="language">
                                        <a href="#">
                                            English
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="language_selection">
                                            <li><a href="#">French</a></li>
                                            <li><a href="#">Italian</a></li>
                                            <li><a href="#">German</a></li>
                                            <li><a href="#">Spanish</a></li>
                                        </ul>
                                    </li>
                                    <li class="account">
                                        @if (Session["khach"] == null)
                                        {
                                            <a href="#" style="width:200px">
                                                My Account
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a href="~/DangNhap/XacNhanRole" style="font-size:13.7px"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                                <li><a href="~/DangNhap/DangKy_NguoiDung" style="font-size:13.7px"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng ký</a></li>
                                            </ul>
                                        }
                                        else
                                        {
                                            var tenkh = Session["khach"] as UserAccount;
                                            <a href="#" style="width:200px">
                                                Chào,@tenkh.KhachHang.Ho @tenkh.KhachHang.Ten
                                                <i class="fa fa-angle-down"></i>
                                            </a>
                                            <ul class="account_selection">
                                                <li><a href="~/ThongTin/ThongTinNguoi"><i class="fa fa-sign-in" aria-hidden="true"></i>Thông tin tài khoản</a></li>
                                                <li><a href="~/DangNhap/Logout"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng xuất</a></li>
                                            </ul>

                                        }

                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

            <!-- Body -->

            <div>
                <div class="container" style="padding-top:140px">
                    <div class="row">
                        <div class="col-md-3">
                            <ul class="list-group">
                                <li class="list-group-item active"><a href="~/ThongTin/ThongTinNguoi" style="color:white;text-decoration:none">Thông tin tài khoản</a></li>
                                <li class="list-group-item"><a href="~/DangNhap/Logout" style="color:black;text-decoration:none">Đăng xuất</a></li>
                            </ul>
                        </div>
                        <div class="col-md-9">
                            <h3>THÔNG TIN TÀI KHOẢN</h3>
                            <form method="post" action="/ThongTin/CapNhatThongTin">
                                <div class="form-group">
                                    <label>Họ</label>
                                    @Html.TextBoxFor(model => model.Ho, new { @class = "form-control" })
                                    <label>Tên</label>
                                    @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Giới tính</label>
                                    <div>
                                        @Html.RadioButtonFor(model => model.GioiTinh, "Nam") Nam
                                        @Html.RadioButtonFor(model => model.GioiTinh, "Nữ") Nữ
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Điện thoại</label>
                                    @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary">LƯU THAY ĐỔI</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="container" style="padding-top:20px;padding-bottom:20px">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
            </div>


            <!-- Footer -->

            <footer class="footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                                <ul class="footer_nav">
                                    <li><a href="#">Blog</a></li>
                                    <li><a href="#">FAQs</a></li>
                                    <li><a href="#">Contact us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                                <ul>
                                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer_nav_container">
                                <div class="cr">©2018 All Rights Reserverd. Made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="#">Colorlib</a> &amp; distributed by <a href="https://themewagon.com">ThemeWagon</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

    </div>



    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap4/popper.js"></script>
    <link href="~/styles/bootstrap4/bootstrap.min.css" rel="stylesheet" />
    <script src="~/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/js/custom.js"></script>

</body>

</html>



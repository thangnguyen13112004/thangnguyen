@model IEnumerable<Nhom05_QuanLyShopQuanAo.Models.GioHang>
@using Nhom05_QuanLyShopQuanAo.Models
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Colo Shop</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/styles/bootstrap4/bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet" />
    <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet" />
    <link href="~/styles/main_styles.css" rel="stylesheet" />
    <link href="~/styles/responsive.css" rel="stylesheet" />
    <link href="~/Content/TranKhangDI_css/css/bootstrap.min.css" rel="stylesheet" />


</head>

<body>
    <header class="header trans_300">

        <!-- Top Navigation -->

        <div class="top_nav">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="top_nav_left">free shipping on all u.s orders over $50</div>
                    </div>
                    <div class="col-md-6 text-right">
                        <div class="top_nav_right">
                            <ul class="top_nav_menu">

                                <!-- Currency / Language / My Account -->

                                <li class="currency">
                                    @*<a href="#">
                                            usd
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="currency_selection">
                                            <li><a href="#">cad</a></li>
                                            <li><a href="#">aud</a></li>
                                            <li><a href="#">eur</a></li>
                                            <li><a href="#">gbp</a></li>
                                        </ul>*@
                                </li>
                                <li class="language">
                                    @*<a href="#">
                                            English
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="language_selection">
                                            <li><a href="#">French</a></li>
                                            <li><a href="#">Italian</a></li>
                                            <li><a href="#">German</a></li>
                                            <li><a href="#">Spanish</a></li>
                                        </ul>*@
                                </li>
                                <li class="account">
                                    @if (Session["khach"] == null)
                                    {
                                        <a href="#" style="width:200px">
                                            My Account
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="account_selection">
                                            <li><a href="~/DangNhap/XacNhanRole" style="font-size:13.7px"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                            <li><a href="~/DangNhap/DangKy_NguoiDung" style="font-size:13.7px"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng ký</a></li>
                                        </ul>
                                    }
                                    else
                                    {
                                        var tenkh = Session["khach"] as UserAccount;
                                        <a href="#" style="width:200px">
                                            Chào,@tenkh.KhachHang.Ho @tenkh.KhachHang.Ten
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="account_selection">
                                            <li><a href="~/ThongTin/ThongTinNguoiDung"><i class="fa fa-sign-in" aria-hidden="true"></i>Thông tin tài khoản</a></li>
                                            <li><a href="~/DangNhap/Logout"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng xuất</a></li>
                                        </ul>

                                    }

                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->

        <div class="main_nav_container">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-right">
                        <div class="logo_container">
                            <a href="#">colo<span>shop</span></a>
                        </div>
                        <nav class="navbar">
                            <ul class="navbar_menu">
                                <li><a href="#">home</a></li>
                                <li><a href="#">shop</a></li>
                                <li><a href="~/Home/Contact">contact</a></li>
                            </ul>
                            <ul class="navbar_user">
                                <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                                <li class="checkout">
                                    <a href="~/GioHang/Index">
                                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                        <span id="checkout_items" class="checkout_items"></span>
                                    </a>
                                </li>
                            </ul>
                            <div class="hamburger_container">
                                <i class="fa fa-bars" aria-hidden="true"></i>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

    </header>

    <div class="fs_menu_overlay"></div>
    <div class="hamburger_menu">
        <div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
        <div class="hamburger_menu_content text-right">
            <ul class="menu_top_nav">
                <li class="menu_item has-children">
                    <a href="#">
                        usd
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a href="#">cad</a></li>
                        <li><a href="#">aud</a></li>
                        <li><a href="#">eur</a></li>
                        <li><a href="#">gbp</a></li>
                    </ul>
                </li>
                <li class="menu_item has-children">
                    <a href="#">
                        English
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a href="#">French</a></li>
                        <li><a href="#">Italian</a></li>
                        <li><a href="#">German</a></li>
                        <li><a href="#">Spanish</a></li>
                    </ul>
                </li>
                <li class="menu_item has-children">
                    <a href="#">
                        My Account
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a href="#"><i class="fa fa-sign-in" aria-hidden="true"></i>Sign In</a></li>
                        <li><a href="#"><i class="fa fa-user-plus" aria-hidden="true"></i>Register</a></li>
                    </ul>
                </li>
                <li class="menu_item"><a href="#">home</a></li>
                <li class="menu_item"><a href="#">shop</a></li>
                <li class="menu_item"><a href="#">promotion</a></li>
                <li class="menu_item"><a href="#">pages</a></li>
                <li class="menu_item"><a href="#">blog</a></li>
                <li class="menu_item"><a href="#">contact</a></li>
            </ul>
        </div>
    </div>


    <div class="container" style="padding-top:200px">
        <h2>Giỏ Hàng</h2>

        <!-- Phần hiển thị thông báo lỗi và thành công -->
        @if (TempData["StockError"] != null)
        {
            <div class="alert alert-danger">
                @TempData["StockError"]
            </div>
        }
        @if (TempData["OrderSuccess"] != null)
        {
            <div class="alert alert-success">
                @TempData["OrderSuccess"]
            </div>
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Mô Tả Sản Phẩm</th>
                    <th>Tổng Tiền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal tongTien = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenSanPham</td>
                        <td>@String.Format("{0:0,0} VND", item.Gia)</td>
                        <td>
                            @*<input type="number" value="@item.SoLuong" min="1" style="width: 60px;" />*@

                            <!-- Form cập nhật số lượng -->
                            <form action="@Url.Action("CapNhatSoLuong", "GioHang")" method="post">
                                <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                <input type="number" name="soLuong" value="@item.SoLuong" min="1" style="width: 60px;" />
                                <button type="submit" class="btn btn-primary btn-sm" style="margin-top:5px">Thay đổi số lượng</button>
                            </form>
                        </td>
                        <td>@item.MoTa</td> <!-- Hiển thị mô tả sản phẩm -->
                        <td>@String.Format("{0:0,0} VND", item.Gia * item.SoLuong)</td>
                        <td>
                            <!-- Nút Xóa -->
                            <a href="javascript:void(0);" onclick="xoaKhoiGioHang('@item.MaSanPham')" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                    tongTien += item.Gia * item.SoLuong;
                }
                <tr>
                    <td colspan="5" class="text-right"><strong>Tổng Tiền:</strong></td>
                    <td>@String.Format("{0:0,0} VND", tongTien) </td>
                </tr>
            </tbody>
        </table>

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tiếp Tục Mua Sắm</a>

        <div class="container" style="padding-left:990px">
            <form action="@Url.Action("DatHang", "GioHang")" method="post">
                <button type="submit" class="btn btn-success">Đặt Hàng</button>
            </form>
        </div>


    </div>






    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    function updateCartCount() {
        $.ajax({
            url: '@Url.Action("GetCartCount", "GioHang")',
            method: 'GET',
            success: function (data) {
                $('#checkout_items').text(data); // Cập nhật số lượng trên biểu tượng giỏ hàng
            }
        });
    }

    function xoaKhoiGioHang(maSanPham) {
        $.ajax({
            url: '@Url.Action("XoaKhoiGioHang", "GioHang")',
            type: 'POST',
            data: { maSanPham: maSanPham },
            success: function () {
                updateCartCount(); // Cập nhật số lượng trên biểu tượng giỏ hàng
                location.reload(); // Tải lại trang để cập nhật danh sách giỏ hàng
            },
            error: function () {
                alert("Xóa sản phẩm thất bại. Vui lòng thử lại.");
            }
        });
    }

    $(document).ready(function() {
        updateCartCount();
    });
    </script>


    <script src="~/Content/TranKhangDI_css/js/bootstrap.bundle.js"></script>
    <script src="~/Content/TranKhangDI_css/js/bootstrap.min.js"></script>

</body>
</html>
